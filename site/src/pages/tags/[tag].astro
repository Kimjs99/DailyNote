---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getBlogPosts, slugify } from "../../utils/content";

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  const tags = new Set(posts.flatMap((post) => post.data.tags));

  return [...tags].map((tag) => ({
    params: { tag: slugify(tag) },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = (await getBlogPosts()).filter((post) =>
  post.data.tags.map((item) => slugify(item)).includes(slugify(tag))
);
---

<BaseLayout title={`태그: ${tag}`}>
  <section class="section">
    <div class="container panel">
      <p class="eyebrow">태그</p>
      <h1>#{tag}</h1>
      <p class="lede">{tag} 태그로 {posts.length}개의 글이 있습니다.</p>
    </div>
  </section>
  <section class="section">
    <div class="container panel">
      <div class="grid">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
