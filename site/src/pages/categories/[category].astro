---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getBlogPosts, slugify } from "../../utils/content";

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  const categories = new Set(posts.map((post) => post.data.category));

  return [...categories].map((category) => ({
    params: { category: slugify(category) },
    props: { category },
  }));
}

const { category } = Astro.props;
const posts = (await getBlogPosts()).filter(
  (post) => slugify(post.data.category) === slugify(category)
);
---

<BaseLayout title={`카테고리: ${category}`}>
  <section class="section">
    <div class="container panel">
      <p class="eyebrow">카테고리</p>
      <h1>{category}</h1>
      <p class="lede">이 카테고리에 {posts.length}개의 글이 있습니다.</p>
    </div>
  </section>
  <section class="section">
    <div class="container panel">
      <div class="grid">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
